# ==========================================
# ANPR System Configuration
# ==========================================

# Laravel API Backend
LARAVEL_API_URL=http://localhost:8000/api
ANPR_TOKEN=anpr_secret_token_12345_for_testing_only

# Model Paths
YOLO_MODEL_PATH=models/yolo/best.pt
PADDLE_OCR_DIR=models/ocr

# ANPR Settings
YOLO_CONF_THRESH=0.5
